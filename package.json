{
	"name": "aliasflare-ts",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "npm run database:generateTypes && vite",
		"build": "npm run database:generateTypes && run-p type-check \"build-only {@}\" --",
		"preview": "npm run build && wrangler dev",
		"database:generateTypes": "node database/GenerateTypes.js",
		"database:generateMigrations": "node database/GenerateMigrations.js",
		"database:generate": "npm run database:generateMigrations && npm run database:generateTypes",
		"database:migrateLocal": "npm run database:generateMigrations && npx wrangler d1 migrations apply D1",
		"database:migrateRemote": "npm run database:generateMigrations && npx wrangler d1 migrations apply D1 --remote",
		"database:migrateLocalClean": "rimraf .wrangler/state/v3/d1 && npm run database:migrateLocal",
		"secrets:push": "npx wrangler secret bulk .dev.vars",
		"build-only": "vite build",
		"type-check": "vue-tsc --build",
		"deploy": "npm run build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"tail": "wrangler tail"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.4",
		"better-sqlite3": "^11.9.1",
		"cloudflare": "^4.3.0",
		"cookie": "^1.0.2",
		"daisyui": "^5.0.27",
		"kysely": "^0.28.1",
		"kysely-d1": "^0.4.0",
		"tailwindcss": "^4.1.4",
		"vue": "^3.5.13",
		"vue-router": "^4.5.0",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.0.8",
		"@cloudflare/workers-types": "^4.20250419.0",
		"@iconify/json": "^2.2.330",
		"@tsconfig/node22": "^22.0.1",
		"@types/node": "^22.14.0",
		"@vitejs/plugin-vue": "^5.2.3",
		"@vue/tsconfig": "^0.7.0",
		"kysely-codegen": "^0.18.3",
		"npm-run-all2": "^7.0.2",
		"rimraf": "^6.0.1",
		"typescript": "~5.8.0",
		"unplugin-icons": "^22.1.0",
		"vite": "^6.2.4",
		"vite-plugin-vue-devtools": "^7.7.2",
		"vue-tsc": "^2.2.8",
		"wrangler": "^4.12.0"
	}
}

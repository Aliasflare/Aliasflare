{
	"name": "aliasflare",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev:database": "wrangler d1 migrations apply D1",
		"dev:databaseClean": "rimraf .wrangler/state/v3/d1 && npm run local:database",
		"dev:run": "npm run build:allWithTypes && vite",
		"dev:tail": "wrangler tail",


		"deploy:worker": "wrangler deploy",
		"deploy:secrets": "wrangler secret bulk .dev.vars",
		"deploy:database": "wrangler d1 migrations apply D1 --remote",
		"deploy:all": "npm run deploy:secrets && npm run deploy:worker",


		"types:config": "node helpers/generate-wrangler-config.js",
		"types:wrangler": "wrangler types",
		"types:database": "node database/GenerateTypes.js",
		"types:all": "npm run types:config && npm run types:wrangler && npm run types:database",

		"build:database": "node database/GenerateMigrations.js",
		"build:vite": "vite build",
		"build:all": "npm run build:database && npm run build:vite",
		"build:allWithTypes": "npm run build types:all && npm run build:all"
	},
	"dependencies": {
		"@primeuix/themes": "^1.1.1",
		"@tailwindcss/vite": "^4.1.8",
		"better-sqlite3": "^11.10.0",
		"chart.js": "^4.4.9",
		"cloudflare": "^4.3.0",
		"cookie": "^1.0.2",
		"daisyui": "^5.0.43",
		"kysely": "^0.28.2",
		"kysely-d1": "^0.4.0",
		"listr": "^0.14.3",
		"primeicons": "^7.0.0",
		"primevue": "^4.3.5",
		"rxjs": "^7.8.2",
		"tailwindcss": "^4.1.8",
		"tailwindcss-primeui": "^0.6.1",
		"vue": "^3.5.16",
		"vue-router": "^4.5.1",
		"zod": "^3.25.57"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.5.0",
		"@iconify/json": "^2.2.347",
		"@tsconfig/node22": "^22.0.2",
		"@types/node": "^24.0.0",
		"@vitejs/plugin-vue": "^5.2.4",
		"@vue/tsconfig": "^0.7.0",
		"kysely-codegen": "^0.18.5",
		"npm-run-all2": "^8.0.4",
		"rimraf": "^6.0.1",
		"typescript": "~5.8.3",
		"unplugin-icons": "^22.1.0",
		"vite": "^6.3.5",
		"vite-plugin-vue-devtools": "^7.7.6",
		"vue-tsc": "^2.2.10",
		"wrangler": "^4.20.3"
	}
}
